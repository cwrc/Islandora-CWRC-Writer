{
  "name": "islandora-cwrc-writer",
  "version": "0.9.1",
  "description": "A wrapper to use CWRC-Writer with Islandora.",
  "keywords": [
    "cwrc",
    "islandora",
    "drupal"
  ],
  "homepage": "https://github.com/cwrc/Islandora-CWRC-Writer#readme",
  "bugs": {
    "url": "https://github.com/cwrc/Islandora-CWRC-Writer/issues"
  },
  "license": "GPL-2.0",
  "contributors": [
    "Andrew MacDonald <andrewjames.code@gmail.com>",
    "James Chartrand <jc.chartrand@gmail.com>",
    "Luciano Frizzera <lucaju@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cwrc/Islandora-CWRC-Writer.git"
  },
  "scripts": {
    "cm": "git-cz",
    "build": "npm run build-cwrc-writer-base && npm run webpack-prod && npm run copy-css",
    "webpack-prod": "webpack --config webpack.prod.js",
    "webpack-dev": "webpack --config webpack.dev.js --debug=true --display-error-details=true",
    "webpack-dev-watch": "webpack --config webpack.dev.js --debug=true --display-error-details=true --watch",
    "dev-server": "webpack-dev-server --config webpack.dev.js",
    "build-cwrc-writer-base": "cd \"node_modules/cwrc-writer-base\" && npm run build && npm run build-scoped-css -- --global-var=\"parentId=#cwrc_wrapper\"",
    "copy-css": "copyfiles \"css/*\" build/"
  },
  "dependencies": {
    "cwrc-git-dialogs": "^2.0.1",
    "cwrc-public-entity-dialogs": "^3.0.1",
    "cwrc-tei-entities-lookup": "^1.3.0",
    "cwrc-writer-base": "^5.1.1",
    "dbpedia-entity-lookup": "^1.0.0",
    "geonames-entity-lookup": "^2.0.0",
    "getty-entity-lookup": "^2.0.0",
    "html-webpack-plugin": "^4.2.1",
    "viaf-entity-lookup": "^2.0.0",
    "wikidata-entity-lookup": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/runtime-corejs2": "^7.9.2",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^4.0.4",
    "copy-webpack-plugin": "^5.1.1",
    "copyfiles": "^2.2.0",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "html-webpack-externals-plugin": "^3.8.0",
    "less": "^3.11.1",
    "mkdirp": "^1.0.4",
    "path-exists-cli": "^1.0.0",
    "terser-webpack-plugin": "^2.3.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
